<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="-1dp"
        android:contentDescription="@string/background"
        android:id="@+id/image_background"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:id="@+id/layout_player_left"
        >
        
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:thumb="@android:color/transparent"
            android:clickable="false"
            android:enabled="false"
            android:progressDrawable="@drawable/seekbar_progress_red"
            android:id="@+id/bar_player_left"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_player_left"
            android:contentDescription="@string/player_1"
            android:scaleType="fitXY"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toEndOf="@id/layout_player_left"
        android:id="@+id/player_dice_left"
        app:layout_constraintTop_toTopOf="@id/layout_player_left"
        app:layout_constraintBottom_toBottomOf="@id/layout_player_left"
        android:layout_marginStart="20dp"
        />

    <include layout="@layout/layout_attacks"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_player_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/layout_attacks_left"
        />
    
    <TextView
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:id="@+id/attack_message"
        app:layout_constraintTop_toBottomOf="@id/layout_attacks_left"
        app:layout_constraintBottom_toTopOf="@id/layout_attacks_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:textColor="@android:color/white"
        />

    <include layout="@layout/layout_attacks"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/layout_player_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/layout_attacks_right"
        />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:id="@+id/layout_player_right"
        >

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:thumb="@android:color/transparent"
            android:clickable="false"
            android:enabled="false"
            android:progressDrawable="@drawable/seekbar_progress_red"
            android:id="@+id/bar_player_right"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_player_right"
            android:contentDescription="@string/player_1"
            android:scaleType="fitXY"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toStartOf="@id/layout_player_right"
        android:id="@+id/player_dice_right"
        app:layout_constraintTop_toTopOf="@id/layout_player_right"
        app:layout_constraintBottom_toBottomOf="@id/layout_player_right"
        android:layout_marginEnd="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>