<TableRow android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/table_row"
    android:background="@color/background_row"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="@string/not_applicable"
        android:textColor="@android:color/black"
        android:autoSizeTextType="uniform"
        android:textSize="18sp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="6sp"
        android:lines="1"
        android:layout_weight="0.3"
        android:padding="3dp"
        android:gravity="center"
        android:id="@+id/table_row_LBL_rank"
        />

    <TextView
        android:text="@string/name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="6sp"
        android:lines="1"
        android:layout_weight="1"
        android:padding="3dp"
        android:gravity="center"
        android:id="@+id/table_row_LBL_name"
        />

    <TextView
        android:text="@string/turns_played"
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="6sp"
        android:textColor="@android:color/black"
        android:lines="1"
        android:layout_weight="1"
        android:padding="3dp"
        android:gravity="center"
        android:id="@+id/table_row_LBL_turns"
        />

    <TextView
        android:text="@string/Location"
        android:textSize="14sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="6sp"
        android:lines="1"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:padding="3dp"
        android:gravity="center"
        android:id="@+id/table_row_LBL_location"
        />

</TableRow>
